<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Live Stream Control</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="mobile-container">
        <div class="status-bar">
            <div class="status-indicator" id="statusIndicator">
                <span class="status-dot"></span>
                <span class="status-text" id="statusText">Offline</span>
            </div>
            <div class="battery-indicator" id="batteryIndicator">
                <svg class="battery-icon" viewBox="0 0 24 12" fill="currentColor">
                    <rect x="1" y="2" width="18" height="8" rx="1" fill="none" stroke="currentColor" stroke-width="1.5"/>
                    <rect x="19.5" y="4.5" width="2.5" height="3" rx="0.5"/>
                    <rect x="2" y="3" width="0" height="6" class="battery-fill"/>
                </svg>
                <span class="battery-percent">--</span>
            </div>
            <button class="stream-toggle" id="streamToggle">
                <svg class="play-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M8 5v14l11-7z"/>
                </svg>
                <svg class="stop-icon" viewBox="0 0 24 24" fill="currentColor" style="display:none">
                    <rect x="6" y="6" width="12" height="12"/>
                </svg>
            </button>
        </div>

        <div class="stream-config">
            <div class="config-section">
                <div class="rtmp-url-section">
                    <label for="rtmpUrl">RTMP URL</label>
                    <input type="text" id="rtmpUrl" placeholder="rtmp://your-server/live/stream-key">
                </div>
            </div>
        </div>

        <div class="video-container">
            <iframe id="livePlayer" src="" frameborder="0" allowfullscreen></iframe>
            <div id="statusLogs" class="status-logs">
                <div class="logs-header">Stream Status</div>
                <div id="logsContent" class="logs-content"></div>
            </div>
            <div class="video-overlay" id="videoOverlay">
                <div class="overlay-message" id="overlayMessage">Stream preview will appear here</div>
            </div>
        </div>

        <div class="hidden-data">
            <span id="userId"><%= userId ?? '' %></span>
            <span id="hasActiveSession"><%= (typeof hasActiveSession !== 'undefined' && hasActiveSession) ? 'true' : 'false' %></span>
            <span id="initialStreamType"><%= streamType ?? '' %></span>
            <span id="initialStreamStatus"><%= streamStatus ?? '' %></span>
            <span id="initialStreamId"><%= streamId ?? '' %></span>
            <span id="initialError"><%= error ?? '' %></span>
            <span id="savedCustomRtmpUrl"><%= customRtmpUrl ?? '' %></span>
        </div>
    </div>

    <script src="/js/webview.js"></script>
</body>
</html>